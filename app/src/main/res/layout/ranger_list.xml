<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Add Ranger"-->
        <!--android:textSize="44sp"-->
        <!--android:layout_marginTop="22dp"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:id="@+id/AddRangerText"/>-->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:id="@+id/ranger1cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ranger1available"
                        android:layout_width="50dp"
                        android:layout_height="65dp"
                        android:layout_alignRight="@+id/ranger1text"
                        android:layout_alignEnd="@+id/ranger1text"
                        android:src="@drawable/red" />

                    <TextView
                        android:id="@+id/ranger1text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="sans-serif"
                        android:text="Ranger 1"
                        android:textSize="50dp"

                        />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/ranger2cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ranger2available"
                        android:layout_width="50dp"
                        android:layout_height="65dp"
                        android:layout_alignRight="@+id/ranger2text"
                        android:layout_alignEnd="@+id/ranger2text"
                        android:src="@drawable/green" />

                    <TextView
                        android:id="@+id/ranger2text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="sans-serif"
                        android:text="Ranger 2"
                        android:textSize="50dp"

                        />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/ranger3cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ranger3available"
                        android:layout_width="50dp"
                        android:layout_height="65dp"
                        android:layout_alignRight="@+id/ranger3text"
                        android:layout_alignEnd="@+id/ranger3text"
                        android:src="@drawable/red" />

                    <TextView
                        android:id="@+id/ranger3text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="sans-serif"
                        android:text="Ranger 3"
                        android:textSize="50dp"

                        />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/ranger4cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ranger4available"
                        android:layout_width="50dp"
                        android:layout_height="65dp"
                        android:layout_alignRight="@+id/ranger4text"
                        android:layout_alignEnd="@+id/ranger4text"
                        android:src="@drawable/green"
                        />

                    <TextView
                        android:id="@+id/ranger4text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="sans-serif"
                        android:text="Ranger 4"
                        android:textSize="50dp"

                        />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/ranger5cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ranger5available"
                        android:layout_width="50dp"
                        android:layout_height="65dp"
                        android:layout_alignRight="@+id/ranger5text"
                        android:layout_alignEnd="@+id/ranger5text"
                        android:src="@drawable/red"/>

                    <TextView
                        android:id="@+id/ranger5text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="sans-serif"
                        android:text="Ranger 5"
                        android:textSize="50dp"

                        />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/addRangerConfirmButton"
        android:layout_width="212dp"
        android:layout_height="97dp"
        android:layout_alignParentBottom="true"
        android:text="Confirm" />

    <Button
        android:id="@+id/addRangerCancelButton"
        android:layout_width="210dp"
        android:layout_height="97dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/addRangerConfirmButton"
        android:text="Cancel" />

</RelativeLayout>
